@model IEnumerable<Clinic.Models.Service>
@{
	List<Service> services = ViewData["Services"] != null ? (List<Service>)ViewData["Services"] : null;
}

<h4>Услуги</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @foreach(var item in services){
                    <a asp-controller="Account" asp-action="Login" asp-route-id="@item.Id"> @item.ServiceName || @item.Specialization.SpecializationName<br> </a>
                    <hr />
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="MainPage">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }