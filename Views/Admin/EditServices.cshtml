@model Clinic.Models.Service

@{
    Layout = "_LayoutAuthorizeAdmin";

    ViewData["Title"] = "Edit";
}

<section class="rols">
    <p>Личный кабинет администратора</p>
</section>

<p class="dobro_poz">Редактировать услугу</p>
<hr />

<h4>Услуга</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditServices">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ServiceName" class="control-label"></label>
                <input asp-for="ServiceName" class="form-control" />
                <span asp-validation-for="ServiceName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SpecializationId" class="control-label"></label>
                <select asp-for="SpecializationId" class="form-control" asp-items="ViewBag.SpecializationId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Изменить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="IndexDoctors">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
