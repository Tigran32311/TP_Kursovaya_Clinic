@model IEnumerable<Clinic.Models.Doctor>

@{
    Layout = "_LayoutAuthorizeAdmin";

    ViewData["Title"] = "Index";
}

<section class="rols">
    <p>Личный кабинет администратора</p>
</section>

<p class="dobro_poz">Список врачей</p>
<hr />

<p>
    <a asp-action="CreateDoctors">Добавить врача</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fathername)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WorkShift)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Specialization)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fathername)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WorkShift)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Specialization.Id)
            </td>
            <td>
                    <a asp-action="EditDoctors" asp-route-id="@item.Id">Редактировать</a> |
                    <a asp-action="DetailsDoctors" asp-route-id="@item.Id">Подробно</a> |
                    <a asp-action="DeleteDoctors" asp-route-id="@item.Id">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
